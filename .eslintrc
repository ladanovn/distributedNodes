{
    "env": {
        "node": true,
        "es6": true,
        "commonjs": false
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "quotes": ["error", "single"],
        "require-atomic-updates": "off",
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
}
